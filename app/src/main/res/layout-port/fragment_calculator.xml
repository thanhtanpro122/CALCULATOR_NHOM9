<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CalculatorFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <TextView
            android:id="@+id/txtViewExpression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="text"
            android:gravity="bottom|right"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textSize="80sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow>
                <ImageButton
                    android:id="@+id/btnBackspace"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_column="3"
                    android:layout_margin="2dp"
                    android:contentDescription="Backspace"
                    android:src="@drawable/btn_delete_port"
                    android:textColor="#d9dfe2" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_bg_round"
                    android:text="C"
                    android:textColor="#DF0D3C"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/btnPlusMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_bg_round"
                    android:text="+/-"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_bg_round"
                    android:text="%"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnDivide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_bg_round"
                    android:backgroundTint="@color/backgroudtext"
                    android:text="÷"
                    android:textColor="@color/text"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnNumber7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_bg_round"
                    android:backgroundTint="@color/backgroudnumber"
                    android:text="7"
                    android:textColor="@color/text"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnNumber8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_bg_round"
                    android:backgroundTint="@color/backgroudnumber"
                    android:text="8"
                    android:textColor="@color/text"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnNumber9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_bg_round"
                    android:backgroundTint="@color/backgroudnumber"
                    android:text="9"
                    android:textColor="@color/text"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnMultiply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_bg_round"
                    android:backgroundTint="@color/backgroudtext"
                    android:text="⨯"
                    android:textColor="@color/text"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnNumber4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_bg_round"
                    android:backgroundTint="@color/backgroudnumber"
                    android:text="4"
                    android:textColor="@color/text"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnNumber5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_bg_round"
                    android:backgroundTint="@color/backgroudnumber"
                    android:text="5"
                    android:textColor="@color/text"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnNumber6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_bg_round"
                    android:backgroundTint="@color/backgroudnumber"
                    android:text="6"
                    android:textColor="@color/text"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_bg_round"
                    android:backgroundTint="@color/backgroudtext"
                    android:text="-"
                    android:textColor="@color/text"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnNumber1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_bg_round"
                    android:backgroundTint="@color/backgroudnumber"
                    android:text="1"
                    android:textColor="@color/text"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnNumber2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_bg_round"
                    android:backgroundTint="@color/backgroudnumber"
                    android:text="2"
                    android:textColor="@color/text"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnNumber3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_bg_round"
                    android:backgroundTint="@color/backgroudnumber"
                    android:text="3"
                    android:textColor="@color/text"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_bg_round"
                    android:backgroundTint="@color/backgroudtext"
                    android:text="+"
                    android:textColor="@color/text"
                    android:textSize="30sp" />

            </TableRow>

            <TableRow
                android:layout_width="299dp"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnParenthesis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_bg_round"
                    android:backgroundTint="@color/backgroudnumber"
                    android:text="( )"
                    android:textColor="@color/text"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnNumber0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_bg_round"
                    android:backgroundTint="@color/backgroudnumber"
                    android:text="0"
                    android:textColor="@color/text"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnComma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_bg_round"
                    android:backgroundTint="@color/backgroudnumber"
                    android:text="."
                    android:textColor="@color/text"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnEqual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_bg_round"
                    android:backgroundTint="@color/backgroudtext"
                    android:text="="
                    android:textColor="@color/text"
                    android:textSize="30sp" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

</FrameLayout>